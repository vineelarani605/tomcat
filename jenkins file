pipeline {
    agent any

    environment {
        TOMCAT_HOME = "/opt/tomcat"
    }

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/vineelarani605/tomcat.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Deploy') {
            steps {
                tomcatDeploy(credentialsId: 'tomcat-credentials',
                             war: 'target/myapp.war',
                             url: 'http://localhost:8080/manager/text',
                             path: '/myapp')
            }
        }
    }
}
